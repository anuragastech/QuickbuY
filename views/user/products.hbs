<script>
    // jQuery code to handle form submission and apply filters
    $(document).ready(function () {
        $('#filter-form').submit(function (event) {
            event.preventDefault();
            // Gather selected filters
            const filters = {
                brand: [],
                size: [],
                color: [],
                priceRange: $('#price-range').val()
            };
            $('input[name="brand"]:checked').each(function () {
                filters.brand.push($(this).val());
            });
            $('input[name="size"]:checked').each(function () {
                filters.size.push($(this).val());
            });
            $('input[name="color"]:checked').each(function () {
                filters.color.push($(this).val());
            });

            // Apply filters (You can replace this with your filtering logic)
            console.log('Applied filters:', filters);
            // For demonstration, I'm just showing the filters in the console
            // You can write your logic to update the product grid based on the filters
            // For example, you can make an AJAX request to fetch filtered products from the server and then update the product grid
        });
    });
</script>


