<script>
  function cartProduct(productId) {
    axios.post(`/user/cart/product/${productId}`)
      .then((response) => {
        if (response.status !== 200) {
          throw new Error('Cart request failed');
        } else {
          document.location.href = "/user/shopping-cart";
        }
      })
      .catch((error) => {
        console.error(error);
      });
  }
