<script>
    function selectSize(size) {
        // Your logic to handle the selection
        // For example, you can highlight the selected size
        document.querySelectorAll('.btn').forEach(btn => {
            btn.classList.remove('active');
        });

        const selectedBtn = document.querySelector(`.btn:contains('${size}')`);
        if (selectedBtn) {
            selectedBtn.classList.add('active');
        }

        // Additional logic like storing the selected size in a hidden input
        document.getElementById('selectedSize').value = size;
    }
</script>



