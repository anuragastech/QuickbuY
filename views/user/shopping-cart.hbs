<script>
    function deleteCart(cartId) {
        axios.delete(`/user/deletecart/${cartId}`)
            .then((response) => {
                if (response.status === 200) {
                    window.location.href = "/user/shopping-cart";
                } else {
                    throw new Error('Delete request failed');
                }
            })
            .catch((error) => {
                console.error(error);
            });
    }
</script>

