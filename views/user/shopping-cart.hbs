        <script>
            function deleteCart(cartId) {
                axios.delete(`/user/deletecart/${cartId}`)
                    .then((response) => {
                        if (response.status === 200) {
                            window.location.href = "/user/shopping-cart";
                        } else {
                            throw new Error('Delete request failed');
                        }
                    })
                    .catch((error) => {
                        console.error(error);
                    });
            }
        </script>

        <script>

            function updateQuantity(cartId) {
                const newQuantity = document.getElementById(`quantity-${cartId}`).value;

                axios.post(`/user/update-cart/${cartId}`, { quantity: newQuantity })
                    .then((response) => {
                        if (response.status === 200) {
                            // You may want to refresh the page or update the UI here
                            Toastify({
                                text: "Item updated to cart successfully!",
                                duration: 3000, // 3 seconds
                                close: true, // Enable close button
                                gravity: "top", // Display position
                                position: "center", // Custom position
                                className: "custom-toastify", // Custom class name
                            }).showToast();
                        } else {
                            alert('Failed to update cart');
                        }
                    })
                    .catch((error) => {
                        console.error(error);
                        alert('Error updating cart');
                    });
            }



