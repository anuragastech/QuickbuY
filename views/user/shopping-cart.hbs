<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    function updateQuantity(productId) {
        const newQuantity = document.getElementById(`quantity-${productId}`).value;
        const cartId = document.querySelector(`[data-cartid="${productId}"]`).getAttribute('data-cartid');
       const size = document.getElementById('sizes').value; // Retrieve size from hidden input

        console.log(newQuantity, cartId, "hai");

        axios.post(`/updateCart/${cartId}`, { quantity: newQuantity, cartId: cartId, size: size })
            .then((response) => {
                if (response.status === 200) {
                    // You may want to refresh the page or update the UI here
                    Toastify({
                        text: "Item updated to cart successfully!",
                        duration: 3000, // 3 seconds
                        close: true, // Enable close button
                        gravity: "top", // Display position
                        position: "center", // Custom position
                        className: "custom-toastify", // Custom class name
                    }).showToast();
                } else {
                    alert('Failed to update cart');
                }
            })
            .catch((error) => {
                console.error(error);
                alert('Error updating cart');
            });
    }
</script>



        <script>
            // Call updateTotals() when the page loads
            updateTotals();

            $(document).ready(function () {
                // Bind updateTotals() to update button click event
                $('.update-btn').on('click', function () {
                    updateTotals();
                });

                // Bind updateTotals() to delete button click event
                $('.delete-btn').on('click', function () {
                    updateTotals();
                });

                // Bind updateTotals() to quantity change event
                $('.quantity').on('change', function () {
                    updateTotals();
                });
            });

            function updateTotals() {
                var subtotal = 0;

                // Calculate subtotal
                $('.quantity').each(function () {
                    var quantity = parseInt($(this).val());
                    var price = parseFloat($(this).data('price') || 0); // Default to 0 if data-price is missing
                    subtotal += quantity * price;

                    // Update item total
                    $(this).closest('tr').find('.item-total').text('₹' + (quantity * price).toFixed(2));
                });

                // Calculate tax (5%)
                var tax = subtotal * 0.05;

                // Calculate grand total
                var grandTotal = subtotal + tax;

                // Update subtotal, tax, and grand total display
                $('#cart-subtotal').text('₹' + subtotal.toFixed(2));
                $('#cart-tax').text('₹' + tax.toFixed(2));
                $('#cart-total').text('₹' + grandTotal.toFixed(2));
            }
        </script>

