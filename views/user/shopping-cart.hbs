            {{#each cart}}
            <div class="product row mb-3 shadow-sm rounded p-3">
                <div class="product-image col">
                    <img src="{{this.productData.image.url}}" class="img-fluid rounded" alt="Product Image">
                </div>
                <div class="product-details col">
                    <div class="product-title">{{this.productData.productname}}</div>
                    <p class="product-description">{{this.productData.description }}.</p>
                </div>
                <div class="product-price col"> ₹{{this.productData.price}}</div>
                {{#each products}}
                <div class="product-quantity col">
                    <input type="number" id="quantity-{{this.productId}}" value="{{this.quantity}}" min="1"
                        class="form-control">
                </div>
                <div class="product-update col">
                    <button class="btn btn-outline-primary" onclick="updateQuantity('{{this.productId}}')">Update</button>
                </div>
                <div class="product-removal col">
                    <button class="btn btn-outline-danger" onclick="deleteCart('{{this.productId}}')">❌</button>
                </div>
                <div class="product-line-price col">₹12.99</div>
             
                <div class="product-select col">
                    <input type="checkbox"  class="form-check-input" id="select-product-{{this.productId}}"
                        onchange="recalculateSelectedCart()">
                </div>
               
            </div>
                {{/each}}
            {{/each}}
