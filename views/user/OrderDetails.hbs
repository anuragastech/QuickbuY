<script>
 document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.openModalBtn');
    buttons.forEach(button => {
        button.addEventListener('click', function () {
            const orderId = this.dataset.orderid;
            sendOrderToBackend(orderId);
        });
    });

    // Modal close functionality
    const modal = document.getElementById("myModal");
    const closeModal = modal.querySelector(".close");
    closeModal.addEventListener("click", function() {
        modal.style.display = "none";
    });

    // Print data button functionality (optional)
    const printDataBtn = document.getElementById("printDataBtn");
    printDataBtn.addEventListener("click", function() {
        // Implement printing logic here
    });
});

function sendOrderToBackend(orderId) {
    fetch('/OrderDetailses', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ orderId: orderId }),
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json(); // Parse the JSON response
    })
    .then(data => {
        // Once you receive the order details, update the modal content
        updateModalContent(data.orderDetails);
        // Open the modal
        const modal = document.getElementById("myModal");
        modal.style.display = "block";
    })
    .catch(error => {
        console.error('There was a problem sending or receiving data from the backend:', error);
    });
}

function updateModalContent(orderDetails) {

    document.getElementById('image').textContent = orderDetails.orderId;
    document.getElementById('productName').textContent = orderDetails.productname;
        document.getElementById('productSize').textContent = orderDetails.size;

    document.getElementById('productQuantity').textContent = orderDetails.quantity;

    document.getElementById('productColor').textContent = orderDetails.color;
    document.getElementById('productBrand').textContent = orderDetails.brand;
    document.getElementById('productCategory').textContent = orderDetails.category;
    document.getElementById('productSubcategory').textContent = orderDetails.subcategory;
    document.getElementById('productSubcategory').textContent = orderDetails.address;
    document.getElementById('OrderStatus').textContent = orderDetails.orderAccepted;
  
