<script>
  function deleteProduct(productId) {
    axios.delete(`/vender/delete/product/${productId}`)
      .then((response) => {
        if (response.status !== 200) {
          throw new Error('Delete request failed');
        } else {
          window.location.href = "/vender/productdetails";
        }
      })
      .catch((error) => {
        console.error(error);
      });
  }
</script>


