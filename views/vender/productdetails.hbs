      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">Subcategory</th>
      <th scope="col">Image</th>
      <th scope="col">Delete</th>
     <th scope="col">Edit</th>


    </tr>
  </thead>
  <tbody>
        {{#each products}}

    <tr>
            {{!-- <th scope="row">1</th> --}}
         <td>{{this.productname}}</td>
        <td>{{this.manufacturename}}</td>
        <td>{{this.brand}}</td>
        <td>{{this.price}}</td>
        <td>{{this.description}}</td>
        <td>{{this.category.title}}</td>
        <td>{{this.subcategory.title}}</td>
        <td>
          <img src="{{this.image.url}}" alt="{{this.productname}} Image" style="max-width: 100px; height: auto;">
        </td>
        <td>
    <div class="product">
      {{!-- <p>{{this.productname}}</p> --}}
      <button class="button1" onclick="deleteProduct( '{{this.productname}}')">Delete</button>
    </div>
             <td> <button class="button2" >Edit</button></td>


     

    </tr>
        {{/each}}

