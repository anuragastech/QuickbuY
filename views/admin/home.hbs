<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
  <style>
    /* Navbar styles */
    .navbar {
      background-color: #333;
      overflow: hidden;
    }

    /* Style for tabs */
    .tab {
      float: left;
      padding: 10px 20px;
      color: #ffffff;
      text-decoration: none;
      cursor: pointer;
    }

    /* Style for sub-tabs container */
    .sub-tabs {
      display: none;
      position: absolute;
      background-color: #333;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Style for sub-tabs */
    .sub-tab {
      display: block;
      padding: 8px 16px;
      color: #ffffff;
      text-decoration: none;
      text-align: center;
      float: none;
      width: 100%;
    }
  </style>
    {{!-- ----------------------------- --}}
<div class="navbar">
    <!-- Main tabs -->
    <a href="#" class="tab" onclick="toggleSubTabs('subTabs1')">Tab 1</a>
    <a href="#" class="tab" onclick="toggleSubTabs('subTabs2')">Tab 2</a>
    <a href="#" class="tab" onclick="toggleSubTabs('subTabs3')">Tab 3</a>

    <!-- Sub-tabs container -->
    <div id="subTabs1" class="sub-tabs">
      <!-- Sub-tabs for Tab 1 -->
      <a href="#" class="sub-tab">Sub Tab 1-1</a>
      <a href="#" class="sub-tab">Sub Tab 1-2</a>
      <a href="#" class="sub-tab">Sub Tab 1-3</a>
    </div>

    <div id="subTabs2" class="sub-tabs">
      <!-- Sub-tabs for Tab 2 -->
      <a href="#" class="sub-tab">Sub Tab 2-1</a>
      <a href="#" class="sub-tab">Sub Tab 2-2</a>
      <a href="#" class="sub-tab">Sub Tab 2-3</a>
    </div>

    <div id="subTabs3" class="sub-tabs">
      <!-- Sub-tabs for Tab 3 -->
      <a href="#" class="sub-tab">Sub Tab 3-1</a>
      <a href="#" class="sub-tab">Sub Tab 3-2</a>
      <a href="#" class="sub-tab">Sub Tab 3-3</a>
    </div>
  </div>

  <script>
    // Function to toggle the visibility of sub-tabs
    function toggleSubTabs(subTabsId) {
      var subTabs = document.getElementById(subTabsId);
      var allSubTabs = document.querySelectorAll('.sub-tabs');

      // Hide all sub-tabs
      allSubTabs.forEach(function(tab) {
        tab.style.display = 'none';
      });

      // Show the selected sub-tabs
      subTabs.style.display = subTabs.style.display === 'none' ? 'block' : 'none';
    }
  </script>

</body>
</html>

</html>