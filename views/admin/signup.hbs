<script>
    function validateForm() {
        var name = document.forms["myform"]["name"].value;
        var email = document.forms["myform"]["email"].value;
        var password = document.forms["myform"]["password"].value;
        var repeatPassword = document.forms["myform"]["repeatPassword"].value;

        var nameError = document.getElementById("message");
        var emailError = document.getElementById("messageMail");
        var passwordError = document.getElementById("messagePassword");
        var repeatPasswordError = document.getElementById("messageRepeatPassword");

        
        if (name === "") {
            nameError.innerHTML = "Please fill in your name";
            return false;
        }
        nameError.innerHTML = "";

        
        if (email === "") {
            emailError.innerHTML = "Please fill in your email";
            return false;
        }
        if (email.indexOf('@') <= 0 || (email.charAt(email.length - 4) !== '.' && email.charAt(email.length - 3) !== '.')) {
            emailError.innerHTML = "Invalid email format";
            return false;
        }
        emailError.innerHTML = "";

      
        if (password === "") {
            passwordError.innerHTML = "Please fill in your password";
            return false;
        }
        if (password.length < 8) {
            passwordError.innerHTML = "Password must be at least 8 characters";
            return false;
        }
        passwordError.innerHTML = "";

      
        if (repeatPassword !== password) {
            repeatPasswordError.innerHTML = "Passwords do not match";
            return false;
        }
        repeatPasswordError.innerHTML = "";

        return true;
    }
</script>

      
     


