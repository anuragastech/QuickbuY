<script>
  function deleteCategory(categoryId) {
    axios.delete(`/admin/delete/${categoryId}`)
      .then((response) => {
        if (response.status !== 200) {
          throw new Error('Delete request failed');
        } else {
          window.location.href = "/admin/categorylist";
        }
      })
      .catch((error) => {
        console.error(error);
      });
  }
</script>


